    b.replace("<i>Leah,</i></a> <i>Lily of Killarney.</i>", "<i>Leah, Lily of Killarney.</i></a>", 1)
}

def fix_oxen(b) {
    b.replace("printed and bound at the <a", "printed and bound at the</a> <a", 1)
}

def fix_eumaeus(b) {
    b.replace("&deg 9", "&deg; 9", 1)
